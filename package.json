{
  "name": "conventional-pr-action",
  "version": "2.0.0",
  "description": "GitHub Action that validates the PR title against a Conventional Commits preset.",
  "main": "./lib/index.js",
  "scripts": {
    "build": "packemon build --addEngines",
    "lint": "beemo eslint ./src",
    "format": "beemo prettier",
    "type": "tsc --noEmit",
    "check": "yarn run type && yarn run lint"
  },
  "repository": "https://github.com/beemojs/conventional-pr-action",
  "author": "Miles Johnson",
  "license": "MIT",
  "engines": {
    "node": ">=10.3.0",
    "npm": ">=6.1.0"
  },
  "packageManager": "yarn@3.2.0",
  "files": [
    "lib/**/*.{js,map}",
    "src/**/*.{ts,tsx,json}"
  ],
  "devDependencies": {
    "@moonrepo/dev": "^3.0.0",
    "@types/node": "^20.12.10",
    "packemon": "^4.0.1",
    "prettier": "^3.2.5",
    "prettier-config-moon": "^1.1.2",
    "tsconfig-moon": "^1.3.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "conventional-changelog-preset-loader": "^2.3.4",
    "conventional-commits-parser": "^3.2.4"
  },
  "packemon": {
    "format": "lib",
    "platform": "node",
    "support": "legacy"
  }
}
